<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-4">
            <%#= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
            <%= render 'users/menu' %>
            <%= link_to "退会する", confirm_unsubscribe_path %>
        </div>
        <div class="col-md-7 offset-md-1">
          <table class="table table-hover table-inverse">
            <tbody>
              <tr>
                <td>名前</td>
                <td><%= @user.name %></td>
              </tr>
            </tbody>
          </table>
          <% if @user.id == current_user.id %>
            <div class="row">
              <%= link_to "",edit_user_path(@user.id),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
            </div>
          <% end %>
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>カフェ名</th>
                <th>キャプション</th>
                <th></th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
             <% @post_images.each do |post_image| %>
              <tr>
                <td></td>
                <td><%= link_to post_image.name,post_image_path(post_image.id) %></td>
                <td><%= post_image.caption %></td>
              </tr>
              <%= attachment_image_tag post_image, :image %>
             <% end %>
            </tbody>
          </table>
        </div>
    </div>
</div>