<div class="container-fluid box-background">
  <div class="row">
    <div class="col-md-4">
      <%#= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      <%= render 'users/menu' %>
    </div>
    <div class="col-md-8">
      <%= render 'users/info', user: @user %>
      <h2 class="font-weight-bold">自分の投稿</h2>
        <% @post_images.each do |post_image| %>
          <div class="card mb-3">
            <div class="row g-0">
              <div class="col-md-4">
                <%=  link_to attachment_image_tag(post_image, :image, :fill, 200, 150, class: "card-img-top"), post_image_path(post_image) %>
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= post_image.name %></h5>
                  <p class="card-text"><%= post_image.caption %></p>
                  <p class="card-text"><%= post_image.prefecture %><%= post_image.address %></p>
                  <p class="card-text"><%= render 'favorites/favorites', post_image: post_image %></p>
                  <p class="card-text"><%= render 'bookmarks/bookmark', post_image: post_image %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>