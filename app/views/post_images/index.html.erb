<h1>画像投稿フォーム</h1>
<%= form_with model: @post_image, method: :post, local:true do |f| %>
  <div class="field">
    <label>画像</label>
    <%= f.attachment_field :image %>
  </div>
  <div class="field">
    <label>カフェ名</label>
    <%= f.text_area :name %>
  </div>
  <div class="field">
    <label>キャプション</label>
    <%= f.text_area :caption %>
  </div>
  <div class="field">
    <label>都道府県</label>
    <%= f.select :prefecture, PostImage.prefectures.keys, {} %>
  </div>
  <div class="field">
    <label>所在地</label>
    <%= f.text_area :address %>
  </div>
  <div class="action">
    <%= f.submit '投稿' %>
  </div>
<% end %>
<h2>投稿一覧</h2>
<% @post_images.each do |post_image| %>
  <div>
    <p>投稿ユーザー画像：<%= link_to attachment_image_tag(post_image, :image), post_image_path(post_image.id) %></p>
    <p>カフェ名：<%= post_image.name %></p>
    <p>キャプション：<%= post_image.caption %></p>
    <p>所在地 : <%= post_image.prefecture %><%= post_image.address %></p>
    <p>ユーザーネーム：<%= post_image.user.name %></p>
  </div>
<% end %>

