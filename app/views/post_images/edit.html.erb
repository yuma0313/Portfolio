<div class="container">
  <%= render'post_images/error', post_image: @post_image %>
  <div class="row justify-content-center">
    <div class="col-4 align-self-center">
      <h2 class="font-weight-bold text-center mt-3">投稿編集</h2>
      <%= form_with model: @post_image, local:true do |f| %>
      <div class="field">
        <label>カフェ名</label><br>
        <%= f.text_area :name, class: 'form-control' %>
      </div>
      <div class="field">
        <label>キャプション</label><br>
        <%= f.text_area :caption, class: 'form-control mb-3' %>
      </div>
      <div class="field" id="star">
        <label>評価</label>
        <%= f.hidden_field :rate, id: :review_star, id: "post_image-rate" %>
      </div>
      <script>
      $('#star').empty();
      $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'post_image[rate]',
        half: true,
      });
      </script>
      <div class="field mt-3">
        <label>都道府県</label><br>
        <%= f.select :prefecture, PostImage.prefectures.keys, {} %>
      </div>
      <div class="field">
        <label>所在地</label><br>
        <%= f.text_area :address, class: 'form-control' %>
      </div>
      <div class="field mb-3">
        <label for="inputImage">投稿画像</label><br>
        <%= f.attachment_field :image, placeholder: "プロフィール画像" %>
      </div>
      <div class="action">
        <%= f.submit "変更内容を更新", class: "btn btn-success"%>
      </div>
      <% end %>
    </div>
  </div>
</div>