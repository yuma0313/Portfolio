<div class="container">
    <div class="row">
      <% post_images.each do |post_image| %>
        <div class="col-md-3">
          <div>
          　<p class="card-text">
              <%= attachment_image_tag post_image.user, :profile_image, :fill, 500, 500, fallback: "no_image.jpg", size:'50x50', class: 'rounded-circle' %>
              <%= post_image.user.name %>
          　</p>
            <%= link_to post_image_path(post_image), class: "link no-underline", 'data-turbolinks': false do %>
              <%= attachment_image_tag post_image, :image, :fill, 500, 500, size:'200x150' ,class: "card-img-list" %>
              <div class="card-body">
                <h6 class="card-title">
                  <%= post_image.name %>
                </h6>
                <p class="card-text">
                  <%= post_image.prefecture %>
                </p>
                <p class="card-text">(<%= post_image.favorites.count %>いいね)</p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>