<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          テストユーザーとしてログイン
        </div>
        <div class="card-body">
          <p class="card-text text-center"><%= link_to 'お試しログイン', users_guest_sign_in_path, method: :post, class: 'btn btn-secondary fas fa-power-off' %></p>
        </div>
      </div>
      <div class="card">
        <div class="card-header">SNSアカウントでログイン</div>
        <div class="card-body">
          <p class="card-text text-center"><%= link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, method: :post, class: 'btn btn-primary' %></p>
          <p class="card-text text-center"><%= link_to 'Twitterでログイン', user_twitter_omniauth_authorize_path, method: :post, class: 'btn btn-info btn-lg' %></p>
          <p class="card-text text-center"><%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post, class: 'btn btn-danger' %></p>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          メールアドレスとパスワードでログイン
        </div>
        <div class="card-body p-4">
          <%= form_with model: @user, url: user_session_path, local: true do |f| %>
            <div class="card-text px-5">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", size: '70' %>
            </div>

            <div class="card-text px-5">
              <%= f.label :パスワード %><br />
              <%= f.password_field :password, autocomplete: "current-password", size: '70' %>
            </div>
            <div class="actions text-center mt-3">
              <%= f.submit "ログインする" %>
            </div>
          <% end %>
          <%#= render "devise/shared/links" %>
          <%#= link_to "twitter",user_twitter_omniauth_authorize_path %>
          <%#= link_to "google",user_google_oauth2_omniauth_authorize_path %>
        </div>
      </div>
    </div>
  </div>
</div>