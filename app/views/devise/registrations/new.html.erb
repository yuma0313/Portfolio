<div class="container">
  <div class="row pt-3 pb-5 justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          ユーザー登録
        </div>
        <div class="card-body p-4">
          <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="card-text px-5">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, size: '70' %>
            </div>

            <div class="card-text px-5">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", size: '70' %>
            </div>

            <div class="card-text px-5">
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", size: '70' %>
            </div>

            <div class="card-text px-5">
              <%= f.label :パスワード確認 %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", size: '70' %>
            </div>

            <div class="actions text-center mt-3">
              <%= f.submit "登録する" %>
            </div>
          <% end %>
          <%#= render "devise/shared/links" %>
          <%= link_to "登録済みの方はこちら", new_user_session_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>